<Window x:Class="Realm2.CombatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Combat" Height="480" Width="640" Closing="Window_Closing">
    <Grid>
        <Label x:Name="playerStats" HorizontalAlignment="Left" Margin="10,52,0,0" VerticalAlignment="Top" Height="292" Width="180"/>
        <Label x:Name="enemyStats" HorizontalAlignment="Left" Margin="432,52,0,0" VerticalAlignment="Top" Height="292" Width="180"/>
        <RichTextBox x:Name="combatText" HorizontalAlignment="Left" Height="334" Margin="195,10,0,0" VerticalAlignment="Top" Width="232">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <ComboBox x:Name="abilityPicker" HorizontalAlignment="Left" Margin="195,376,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="goButton" Content="Go!" HorizontalAlignment="Left" Margin="352,376,0,0" VerticalAlignment="Top" Width="75" Click="goButton_Click"/>
        <Label Content="       Player" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="180" Height="37" FontSize="24" FontWeight="Bold"/>
        <Label Content="       Enemy" HorizontalAlignment="Left" Margin="432,6,0,0" VerticalAlignment="Top" Height="41" Width="180" FontSize="24" FontWeight="Bold"/>

    </Grid>
</Window>
