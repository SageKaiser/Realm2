<Window x:Class="Realm2.MerchantWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BuySellWindow" Height="480" Width="640" Loaded="Window_Loaded">
    <Grid>
        <Label x:Name="merchantName" Content="Merchant - " HorizontalAlignment="Left" Margin="160,10,0,0" VerticalAlignment="Top" FontSize="36"/>
        <ListBox x:Name="forsaleBox" ItemsSource="{Binding}" HorizontalAlignment="Left" Height="282" Margin="10,109,0,0" VerticalAlignment="Top" Width="260"/>
        <ListBox x:Name="bpBox" ItemsSource="{Binding}" HorizontalAlignment="Left" Height="282" Margin="362,109,0,0" VerticalAlignment="Top" Width="260"/>
        <Label Content="For Sale" HorizontalAlignment="Left" Margin="93,73,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Label Content="Backpack" HorizontalAlignment="Left" Margin="434,73,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Button x:Name="buyButton" Content="Buy" HorizontalAlignment="Left" Margin="93,401,0,0" VerticalAlignment="Top" Width="76" Click="Button_Click"/>
        <Button x:Name="sellButton" Content="Sell" HorizontalAlignment="Left" Margin="449,401,0,0" VerticalAlignment="Top" Width="75" Click="sellButton_Click"/>

    </Grid>
</Window>
