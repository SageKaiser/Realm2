<Window x:Name="mainWindow" x:Class="Realm2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="594" Width="709" Loaded="mainWindow_Loaded"
        FocusManager.FocusedElement="{Binding ElementName=inputText}"
        WindowStartupLocation="CenterScreen" Closing="mainWindow_Closing" GotFocus="mainWindow_GotFocus" Activated="mainWindow_Activated">
    <Grid>
        <RichTextBox x:Name="mainText" IsReadOnly="True" GotFocus="mainText_GotFocus" Margin="10,10,10,42"/>
        <TextBox x:Name="inputText" TextWrapping="Wrap" KeyUp="inputText_KeyUp" Margin="10,526,10,10"/>
    </Grid>
</Window>
