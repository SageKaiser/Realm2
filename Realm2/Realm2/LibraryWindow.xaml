<Window x:Class="Realm2.LibraryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LibraryWindow" Height="300" Width="300">
    <Grid>
        <Label x:Name="libraryName" Content="" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="24"/>
        <ComboBox ItemsSource="{Binding}" x:Name="bookBox" HorizontalAlignment="Left" Margin="162,73,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="bookBox_SelectionChanged"/>
        <Label Content="Please pick a book to read: " HorizontalAlignment="Left" Margin="10,69,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="bookDesc" HorizontalAlignment="Left" Margin="10,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="114" Width="272"/>
        <Button Content="Read" HorizontalAlignment="Left" Margin="104,239,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
